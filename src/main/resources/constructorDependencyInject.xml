<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="  
http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
http://www.springframework.org/schema/context                http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<bean id="byIndex" class="cn.javass.spring.chapter3.helloworld.HelloImpl3">
	    <constructor-arg index="0" value="Hello Xing"></constructor-arg>
	    <constructor-arg index="1" value="2"></constructor-arg>
	</bean>
	 
	 <bean id="byType" class="cn.javass.spring.chapter3.helloworld.HelloImpl3">
	 	<constructor-arg type="java.lang.String" value="Hello Xing"></constructor-arg>
	 	<constructor-arg type="int" value="2"/>
	 </bean>
	 
	 <bean id="byName" class="cn.javass.spring.chapter3.helloworld.HelloImpl3">
	 	<constructor-arg name="message" value="Hello Xing"/>
	 	<constructor-arg name="index" value="2"/>
	 </bean>
</beans>  